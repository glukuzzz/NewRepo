@model IEnumerable<ViachappaFactAuth.DB.Order>

@{
    ViewBag.Title = "OutgoingOrders";
}

<h2>Список реализации товаров и услуг</h2>

<p>
    @Html.ActionLink("Создать", "OutgoingOrdersCreate")
</p>
<table class="table">
    <tr>
        <th>Номер документа</th>
        <th>Дата документа</th>
        <th>Контрагент</th>
        <th>Организация</th>
        <th>Договор</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DocNumber)
        </td>
        <td>
            @item.DocDate.ToShortDateString()
        </td>
        <td>@Html.DisplayFor(modelItem => item.Partner.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Organisation.ShortName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contract.ContractNumber)
        </td>
        <td>
            @Html.ActionLink("Просмотреть", "OutgoingOrder", new { id=item.Id }) 
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id, delete = 1 })
        </td>
    </tr>
}
</table>
