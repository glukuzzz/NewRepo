@model IEnumerable<ViachappaFactAuth.DB.ProductProcessingOperation>

@{
    ViewBag.Title = "ProductProcessingOperationList";
}

<h2>Список операций обработки продукции</h2>

<p>
    @Html.ActionLink("Добавить новую операцию", "ProductProcessingOperationCreate")
</p>
<table class="table">
    <tr>
        <th>Подразделение</th>
        <th>Название</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Department.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
