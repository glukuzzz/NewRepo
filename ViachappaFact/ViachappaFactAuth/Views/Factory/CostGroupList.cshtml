@model IEnumerable<ViachappaFactAuth.DB.CostGroup>

@{
    ViewBag.Title = "CostGroupList";
}

<h2>CostGroupList</h2>

<p>
    @Html.ActionLink("Создать", "CostGroupCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.OrderBy(x=>x.Name)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Изменить", "CostGroupCreate", new { id=item.Id }) <hr />
            @Html.ActionLink("Удалить", "CostGroupCreate", new { id=item.Id, delete = 1 })
        </td>
    </tr>
}

</table>
